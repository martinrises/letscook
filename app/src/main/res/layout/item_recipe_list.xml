<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:id="@+id/root_recipe_list"
    android:paddingLeft="@dimen/margin_recipe_item_left_right"
    android:paddingRight="@dimen/margin_recipe_item_left_right"
    android:paddingBottom="@dimen/margin_recipe_title_top">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recipe_img_iv"
        android:layout_width="120dip"
        android:layout_height="80dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_recipe_item_top_bottom"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="@dimen/margin_recipe_item_top_bottom"
        android:background="@color/bg_img_recipe" />

    <TextView
        android:id="@+id/recipe_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_recipe_title_top"
        android:layout_toLeftOf="@id/recipe_img_iv"
        android:ellipsize="end"
        android:lines="2"
        android:text="testtesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttest"
        android:textSize="16dip" />

    <TextView
        android:id="@+id/recipe_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/recipe_img_iv"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="descdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdesc"
        android:textSize="14dp" />

</RelativeLayout>